<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.serviceModel>
        <behaviors />
        <bindings>
            <netNamedPipeBinding>
                <binding name="customNamedPipeBinding" maxReceivedMessageSize="1000000" />
            </netNamedPipeBinding>
        </bindings>
        <client>
            <endpoint address="net.pipe://calculatorService/" binding="netNamedPipeBinding"
                bindingConfiguration="customNamedPipeBinding" contract="CommonContracts.ICalc"
                name="calcEP" kind="" endpointConfiguration="">
                <identity>
                    <dns value="localhost" />
                    <certificateReference storeName="My" storeLocation="LocalMachine"
                        x509FindType="FindBySubjectDistinguishedName" />
                </identity>
            </endpoint>
        </client>
    </system.serviceModel>
</configuration>