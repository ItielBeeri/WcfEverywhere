<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.serviceModel>
        <bindings>
            <netNamedPipeBinding>
                <binding name="customNamedPipeBinding" maxReceivedMessageSize="1000000" />
            </netNamedPipeBinding>
        </bindings>
        <services>
            <service name="CalcService.CalculatorService">
                <endpoint address="" binding="netNamedPipeBinding" bindingConfiguration="customNamedPipeBinding"
                    contract="CommonContracts.ICalc">
                    <identity>
                        <dns value="localhost" />
                    </identity>
                </endpoint>
                <host>
                    <baseAddresses>
                        <add baseAddress="net.pipe://calculatorService" />
                    </baseAddresses>
                </host>
            </service>
        </services>
    </system.serviceModel>
</configuration>